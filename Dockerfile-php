FROM php:7-fpm

RUN apt-get update && apt-get install -y libpng-dev libfreetype6-dev libjpeg62-turbo-dev libxml2-dev unzip
RUN docker-php-ext-install mysqli pdo pdo_mysql xml
#RUN docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/
RUN docker-php-ext-configure gd
RUN docker-php-ext-install gd

ADD https://github.com/fisharebest/webtrees/releases/download/1.7.17/webtrees-1.7.17.zip  /var/www/
RUN cd /var/www \
  && unzip /var/www/webtrees-1.7.17.zip \
  && mv webtrees/* . \
  && rmdir webtrees \
  && rm webtrees-1.7.17.zip
